!!!5
html
    head
        title #{title} - Mongo Burger Co - UK Branch Locator
        meta(name='viewport', content='width=device-width, initial-scale=1.0, user-scalable=no')
        link(rel='stylesheet', href='stylesheets/bootstrap.css')
        link(rel='stylesheet', href='javascripts/leaflet/leaflet.css')
        script(type='text/javascript', src='http://maps.google.com/maps/api/js?v=3&sensor=false')
        script(type='text/javascript', src='javascripts/leaflet/leaflet.js')
        script(type='text/javascript', src='javascripts/leaflet/leaflet.google.js')
        script(type='text/javascript', src='javascripts/jquery-1.9.1.js')
        script(type='text/javascript', src='javascripts/bootstrap.js')
        script(type='text/javascript', src='javascripts/app_global.js')
        script(type='text/javascript', src='javascripts/app_location_selector.js')
        block head
        style(type='text/css')
            #controls {
                margin: 0;
                border-left: 0;
                border-right: 0;
                border-radius: 0;
            }
            #controls .location-label label {
                text-align: right;
                font-style: italic;
                line-height: 28px;
                font-size: 14px;
            }
            #controls .location-button {
                text-align: right;
            }
            #controls .location-button a {
                padding-top: 3px;
                padding-bottom: 3px;
            }
            .leaflet-container.location-selector {
                cursor: crosshair;
            }
    body
        div(class='navbar navbar-inverse navbar-static-top', style='margin: 0', id='header')
            div(class='navbar-inner')
                div(class='container-fluid')
                    a(class='brand', href='/') Mongo Burger Co
                    p(class='navbar-text pull-right')
                        //- a(href='/MongoStudioUrl', target='_blank', class='navbar-link') Mongo Studio
                    ul.nav
                        li(class= menu === 'map' && 'active'): a(href='/map') Map
                        li(class= menu === 'eatin' && 'active'): a(href='/eatin') Eat-In
                        li(class= menu === 'delivery' && 'active'): a(href='/delivery') Delivery
                        li(class= menu === 'drivethru' && 'active'): a(href='/drivethru') Drive Thru
        block body